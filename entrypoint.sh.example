#!/bin/bash

set -e

# Replace these with your branch name
BRANCH="<CHANGE BRANCH NAME>"

# Application Name
APP_NAME="<APP NAME>"

# Replace these with your bot token and chat ID
TELEGRAM_BOT_TOKEN="<YOUR_BOT_TOKEN>"
TELEGRAM_CHAT_ID="<YOUR_CHAT_ID>"

# disbaled it if not use telegram alert
function send_telegram_alert {
    local message="$1"
    curl -s -X POST "https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage" \
    -d chat_id="$TELEGRAM_CHAT_ID" \
    -d text="$message - ($APP_NAME)"
}

# disbaled it if not use telegram alert
function error_exit {
    local message="$1"
    send_telegram_alert "ðŸ”´ Deployment failed: $message - ($APP_NAME)"
    exit 1
}

# start deploy process
echo "âœ… Deploying Application ..."

# Update codebase
if git pull origin $BRANCH; then
    echo "âœ… Codebase updated from $BRANCH."
else
    error_exit "ðŸš¨ Failed to update codebase."
fi

# BUN Install
if bun install; then
    echo "âœ… BUN Install"
else
    error_exit "ðŸš¨ Failed to run BUN Install."
fi

# bunx + vite run Build
if bunx --bun vite build; then
    echo "âœ… Run bunx --bun vite build."

    # Hapus node_modules setelah build berhasil
    rm -rf node_modules
    echo "âœ… node_modules folder removed."
else
    error_exit "ðŸš¨ Failed to Build."
fi

# Send success alert if use telegram alert bot
send_telegram_alert "ðŸŸ¢ Deployment succeeded. The application is now live."

# finish deploy
echo "âœ… Application Deployed Successfully"
